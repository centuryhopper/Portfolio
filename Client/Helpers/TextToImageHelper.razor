
@inject IJSRuntime jsRuntime


<div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Image to Text Program</h1>

    <input type="file" id="imageInput" accept="image/*" class="form-control" style="width: 20rem;">

    <div class="m-3">
        <button id="extractButton" class="btn btn-info" @onclick="@(async () => {
            await jsRuntime.InvokeVoidAsync("CUSTOM.extractText");
        })">
            Extract Text
        </button>
        <textarea id="outputTextarea" class="form-control m-3" rows="10"></textarea>
        <button id="copyButton" class="btn btn-primary" @onclick="@(async () => {
            await jsRuntime.InvokeVoidAsync("CUSTOM.copyToClipBoard");
        })">
            Copy to Clipboard
        </button>
    </div>

</div>



